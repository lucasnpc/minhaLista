<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cti.myapplication.MainActivity">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_width="379dp"
        tools:layout_editor_absoluteY="11dp"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:text="LISTAR"
        android:id="@+id/button2"
        android:layout_height="48dp"
        android:textSize="13dp"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center"
        android:layout_width="88dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bAdd"
        app:layout_constraintLeft_toRightOf="@+id/bAdd"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:onClick="ShowLista" />

    <Button
        android:text="ADD"
        android:id="@+id/bAdd"
        android:layout_height="48dp"
        android:textSize="13dp"
        android:background="@android:color/holo_orange_dark"
        android:gravity="center"
        android:onClick="insereRegistro"
        android:layout_width="88dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.1" />
</android.support.constraint.ConstraintLayout>
